<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mGroupViewTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mGroupViewTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_general_row_lable_margin_left"
            android:paddingTop="@dimen/row_spacing_small"
            android:paddingBottom="@dimen/row_spacing_small"
            android:text="标题"
            android:textSize="@dimen/row_font_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mGroupViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/widgets_general_row_normal"
        android:orientation="vertical" />
</LinearLayout>